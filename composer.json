{
    "name": "jessicajohnson/wp-security-hardening",
    "description": "zero-maintenance security plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "version": "1.0.0",
    "keywords": [
        "wordpress",
        "plugin",
        "security",
        "malware",
        "hardening"
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "composer/installers": "^2.0",
        "paragonie/sodium_compat": "^1.20"
    },
    "require-dev": {
        "10up/wp_mock": "1.0.0",
        "brain/monkey": "2.*",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.66",
        "infection/infection": "^0.27",
        "nunomaduro/phpinsights": "^2.0",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-stubs/wordpress-stubs": "^6.4",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpcsstandards/phpcsextra": "^1.0",
        "phpcsstandards/phpcsutils": "^1.0",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.11",
        "swissspidy/phpstan-no-private": "^0.2.0",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "vimeo/psalm": "^5.26",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "suggest": {
        "ext-xdebug": "Recommended for development to enable code coverage, debugging, and profiling",
        "ext-igbinary": "Improves caching performance",
        "ext-pcov": "Alternative to Xdebug for code coverage"
    },
    "autoload": {
        "classmap": ["includes/"]
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "authors": [
        {
            "name": "Jessica Johnson",
            "email": "2334167+jessifoo@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.2"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 600
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml",
        "phpstan": "phpstan analyse",
        "psalm": "psalm --no-cache",
        "infection": "infection --threads=4",
        "insights": "phpinsights analyse --no-interaction --min-quality=90 --min-complexity=85 --min-architecture=90 --min-style=90",
        "lint": "parallel-lint . --exclude vendor --exclude node_modules",
        "check": [
            "@lint",
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "fix": [
            "@phpcbf",
            "@cs-fix"
        ],
        "security-check": [
            "composer audit",
            "@psalm --taint-analysis",
            "@phpstan --level=max"
        ],
        "qa": [
            "@lint",
            "@test",
            "@test-mutation",
            "@metrics",
            "@security-check"
        ]
    }
}
